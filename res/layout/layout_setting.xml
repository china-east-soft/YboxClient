<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bcg_round_corner_item"
            android:orientation="vertical" >

            <!--
            <TextView
                android:id="@+id/setting_wlan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_list_heigth"
                android:background="@drawable/bcg_round_corner_top"
                android:drawableRight="@drawable/setting_arrow"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:paddingLeft="12dip"
                android:text="@string/setting_wlan"
                android:textSize="16sp" />
            -->

            <RelativeLayout
                android:id="@+id/setting_net"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bcg_round_corner_top" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:drawableRight="@drawable/setting_arrow"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:paddingLeft="12dip"
                    android:text="@string/setting_wlan"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_net_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingRight="30dip"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_stroke"
                android:background="@color/round_corner_line_normal" />

            <RelativeLayout
                android:id="@+id/setting_devices"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bcg_round_corner_middle" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:drawableRight="@drawable/setting_arrow"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:paddingLeft="12dip"
                    android:text="@string/setting_devices"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_devices_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingRight="30dip"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_stroke"
                android:background="@color/round_corner_line_normal" />

            <TextView
                android:id="@+id/setting_wifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_list_heigth"
                android:background="@drawable/bcg_round_corner_bottom"
                android:drawableRight="@drawable/setting_arrow"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:paddingLeft="12dip"
                android:text="@string/setting_wifi"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@drawable/bcg_round_corner_item"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/setting_update_ybox"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bcg_round_corner_top" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:paddingLeft="12dip"
                    android:text="@string/setting_update_ybox"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_update_ybox_latest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingRight="30dip"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_stroke"
                android:background="@color/round_corner_line_normal" />

            <RelativeLayout
                android:id="@+id/setting_update_app"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bcg_round_corner_bottom" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:paddingLeft="12dip"
                    android:text="@string/setting_update_app"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_update_app_latest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingRight="30dip"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>