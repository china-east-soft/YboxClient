<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    android:layout_marginTop="12dip"
    android:background="@drawable/bcg_round_corner_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/status_traffic_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bcg_round_corner_top" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableRight="@drawable/setting_arrow"
            android:gravity="center_vertical"
            android:padding="8dip"
            android:paddingLeft="12dip"
            android:text="@string/status_traffic_remain"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status_traffic_remain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="30dip"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_stroke"
        android:background="@color/round_corner_line_normal" />

    <RelativeLayout
        android:id="@+id/status_battery_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bcg_round_corner_middle" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="8dip"
            android:paddingLeft="12dip"
            android:text="@string/status_battery_remain"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status_battery_remain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="30dip"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_stroke"
        android:background="@color/round_corner_line_normal" />

    <RelativeLayout
        android:id="@+id/status_signal_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bcg_round_corner_bottom" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="8dip"
            android:paddingLeft="12dip"
            android:text="@string/status_signal_strength"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status_signal_strength"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="30dip"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>