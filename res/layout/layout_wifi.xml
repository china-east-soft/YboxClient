<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bcg"
    android:padding="12dip" >

    <TextView
        android:id="@+id/wifiset_lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifiset_base"
        android:textColor="@color/wifiset_title"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/wifiset_lay1"
        android:background="@color/wifiset_line" />

    <TextView
        android:id="@+id/ssid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiset_lay1"
        android:minWidth="80dip"
        android:paddingBottom="12dip"
        android:paddingRight="12dip"
        android:paddingTop="12dip"
        android:text="@string/ssid_name"
        android:textColor="@color/wifiset_black" />

    <EditText
        android:id="@+id/ssid_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/ssid_text"
        android:layout_toRightOf="@id/ssid_text"
        android:singleLine="true"
        android:textColor="@color/wifiset_black" />

    <TextView
        android:id="@+id/security_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ssid_text"
        android:minWidth="80dip"
        android:paddingBottom="12dip"
        android:paddingRight="12dip"
        android:paddingTop="12dip"
        android:text="@string/security"
        android:textColor="@color/wifiset_black" />

    <Spinner
        android:id="@+id/security_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/security_text"
        android:layout_marginLeft="30dip"
        android:entries="@array/wifi_security_types"
        android:gravity="center"
        android:minWidth="150dip"
        android:spinnerMode="dropdown"
        android:textColor="@color/wifiset_black" />

    <TextView
        android:id="@+id/pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/security_spinner"
        android:minWidth="80dip"
        android:paddingBottom="12dip"
        android:paddingRight="12dip"
        android:paddingTop="12dip"
        android:text="@string/pass_name"
        android:textColor="@color/wifiset_black"
        android:textSize="16sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/pass_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/pass_text"
        android:layout_toRightOf="@id/pass_text"
        android:hint="@string/pass_hint"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/wifiset_black"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/pass_show_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/pass_edittext"
        android:layout_below="@id/pass_text"
        android:button="@drawable/login_checkbox"
        android:checked="true"
        android:drawablePadding="8dip"
        android:paddingLeft="40dip"
        android:paddingTop="4dip"
        android:text="@string/show_pass"
        android:textColor="@color/wifiset_black"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/max_users_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_show_checkbox"
        android:layout_marginTop="20dip"
        android:text="@string/max_client_num"
        android:textColor="@color/wifiset_title"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/max_users_text"
        android:background="@color/wifiset_line" />

    <Spinner
        android:id="@+id/max_users_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_users_text"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="12dip"
        android:entries="@array/max_users_selector"
        android:gravity="center"
        android:minWidth="150dip"
        android:spinnerMode="dropdown"
        android:textColor="@color/wifiset_black" />

    <TextView
        android:id="@+id/auto_disable_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_users_spinner"
        android:layout_marginTop="10dip"
        android:text="@string/wifi_auto_disable"
        android:textColor="@color/wifiset_title"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/auto_disable_text"
        android:background="@color/wifiset_line" />

    <Spinner
        android:id="@+id/auto_disable_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/auto_disable_text"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="12dip"
        android:entries="@array/auto_disable_types"
        android:gravity="center"
        android:minWidth="150dip"
        android:spinnerMode="dropdown"
        android:textColor="@color/wifiset_black" />

</RelativeLayout>